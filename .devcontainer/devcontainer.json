// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "Existing Docker Compose",
	"dockerComposeFile": [
		"../deployment/docker-compose.yaml",
		"../deployment/docker-compose.dev.yaml"
	],
	"service": "qa",
	"workspaceFolder": "/opt/QuickAnnotator",
	
	"forwardPorts": [5000, 5173, 8265, 6006],
	"updateRemoteUserUID": false,

	// NOTE: Set the GID (id -g) of your local user to match
	// the user in the container for proper file permissions
	"containerEnv": {
		"GID": "1000"
	},

	// Add VS Code extensions
	"customizations": {
		"vscode": {
		  "extensions": ["ms-python.python", "alexcvzz.vscode-sqlite", "ms-toolsai.jupyter", "anyscalecompute.ray-distributed-debugger"]
		}
	},

	"postCreateCommand": "uv pip install -e ."

}
